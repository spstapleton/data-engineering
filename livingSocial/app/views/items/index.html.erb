<div>
  <h2>Items</h2>
  <% if @items.blank? %>
      <div><h3>There are currently no items in the system.</h3></div>
  <% else %>
      <table class="table table-striped table-bordered">
        <thead>
        <tr>
          <th>Item Description</th>
          <th>Price</th>
          <th>Merchant</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @items.each do |item| %>
            <tr>
              <td>
                <%= item.item_description %>
              </td>
              <td>
                <%= item.price %>
              </td>
              <td>
                <%= item.merchant.andand.name %>
              </td>
              <td>
                <%= link_to "View Related Orders", orders_path(item_id: item.id) %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
  <% end %>
</div>