<div>
  <h2>Customers</h2>
  <% if @customers.blank? %>
    <div><h3>There are currently no customers in the system.</h3></div>
  <% else %>
  <table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>
  </thead>
    <tbody>
    <% @customers.each do |customer| %>
        <tr>
          <td>
            <%= customer.name %>
          </td>
          <td>
            <%= link_to "View Related Orders", orders_path(customer_id: customer.id) %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <% end %>
</div>