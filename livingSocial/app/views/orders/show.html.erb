<div>
  <div>
    <h2>Order from file: <%= @order.filename %></h2>
    <div><a href="<%= new_order_path %>">New Orders Import</a></div>
    <% if @order.blank? %>
        <div><h3>No Order was found.</h3></div>
    <% else %>
        <table class="table table-striped table-bordered">
          <thead>
          <tr>
            <th>Customer Name</th>
            <th>Item Description</th>
            <th>Item Price</th>
            <th>Purchase Count</th>
            <th>Revenue</th>
            <th>Merchant Address</th>
            <th>Merchant Name</th>
          </tr>
          </thead>
          <tbody>
          <% @order.order_rows.each do |order_row| %>
              <tr>
                <td>
                  <%= order_row.customer.andand.name %>
                </td>
                <td>
                  <%= order_row.item.andand.item_description %>
                </td>
                <td>
                  <%= order_row.item.andand.price %>
                </td>
                <td>
                  <%= order_row.purchase_count %>
                </td>
                <td>
                  <%= order_row.total_cost %>
                </td>
                <td>
                  <%= order_row.merchant.andand.address %>
                </td>
                <td>
                  <%= order_row.merchant.andand.name %>
                </td>
              </tr>
          <% end %>
          </tbody>
          <tfoot>
              <tr>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td>Gross Revenue:</td>
                  <td><%= @order.get_order_total %></td>
                  <td></td>
                  <td></td>
              </tr>
          </tfoot>
        </table>
    <% end %>
  </div>
</div>